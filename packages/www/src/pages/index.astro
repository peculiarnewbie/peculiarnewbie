---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../app.css";
import { getCollection } from "astro:content";

import GithubIcon from "../../public/icons/github-icon.svg";
import LinkIcon from "../../public/icons/link-icon.svg";

const projects = await getCollection("project");
const expeciences = await getCollection("experience");
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="bg-amber-400 dark:bg-neutral-900 dark:text-white font-display">
        <div
            class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 md:px-12 md:py-16 lg:py-0"
        >
            <div class="lg:flex lg:justify-between lg:gap-4">
                <div
                    class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24"
                >
                    <header>
                        <h1 class="text-5xl">Arif Rahman</h1>
                    </header>
                    <footer class="bottom-0 mt-8 flex gap-7">footer</footer>
                </div>
                <main
                    class="flex min-h-screen flex-col pt-24 lg:w-1/2 lg:py-24"
                >
                    <div class="h-96">heyy</div>
                    <h1 class="text-3xl font-black pb-4">Experience</h1>
                    <div class="flex flex-col gap-6">
                        {
                            expeciences.map((experience) => (
                                <a href={experience.data.url} target="_blank" class="flex gap-4">
                                    <div class="basis-44">
                                    <p>{experience.data.title}</p>
                                    <p>{experience.data.workPlace}</p>
                                        <p>{experience.data.startDate.getFullYear()} - Present</p>
                                    </div>
                                    <div class="basis-1 grow flex flex-col gap-3">
                                        <p class="text-sm">{experience.body}</p>
                                        <div class="flex flex-wrap gap-2">
                                        {experience.data.tags ? (
                                            experience.data.tags.map((tag) => (
                                                <p class="text-sm">{tag}</p>
                                            ))
                                        ) : <></>}
                                        </div>
                                    </div>
                                </a>
                                ))
                        }
                        </div>
                    <h1 class="text-3xl font-black pb-4 pt-8">Projects</h1>
                    <div class="flex flex-col gap-6">
                    {
                        projects.map((project) => (
                            <div class="flex gap-4">
                                <div class="flex-col max-w-44">
                                    <img
                                        class="py-3 px-1"
                                        width={720}
                                        height={360}
                                        src={project.data.image}
                                        alt=""
                                    />
                                    <div class="flex gap-8 justify-center">
                                        <a
                                            href={project.data.githubUrl}
                                            target="_blank"
                                        >
                                            <GithubIcon fill={"#fff"} />
                                        </a>
                                        <a
                                            href={project.data.url}
                                            target="_blank"
                                        >
                                            <LinkIcon fill={"#fff"} />
                                        </a>
                                    </div>
                                </div>
                                <div class="flex flex-col gap-3 justify-baseline">
                                    <h4 class="font-bold">
                                        {project.data.title}
                                    </h4>
                                    <p class="text-sm">{project.body}</p>
                                    <div class="flex gap-2">
                                    {project.data.tags ? (
                                        project.data.tags.map((tag) => (
                                            <p class="text-sm">{tag}</p>
                                        ))
                                    ) : <></>}
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                    </div>
                    <div class="h-96">heyy</div>
                    <div class="h-96">heyy</div>
                    <div class="h-96">heyy</div>
                    <div class="h-96">heyy</div>
                </main>
            </div>
        </div>
    </body>
</html>
