---
import GithubIcon from "../../public/icons/github.svg";
import TwitterIcon from "../../public/icons/twitter.svg";
import BlueskyIcon from "../../public/icons/bluesky.svg";
import DiscordIcon from "../../public/icons/discord.svg";
---

<footer class="bottom-0 mt-8 flex gap-2">
    <a
        href="https://bsky.app/profile/peculiarnewbie.com"
        target="_blank"
        class="size-12 p-2 group"
    >
        <BlueskyIcon
            size={32}
            class="fill-white/50 group-hover:fill-indigo-300"
        />
    </a>
    <a
        class="size-12 p-2 group"
        href="https://twitter.com/peculiarnewbie"
        target="_blank"
    >
        <TwitterIcon
            size={32}
            class="fill-white/50 group-hover:fill-indigo-300"
        />
    </a>
    <a
        href="https://github.com/peculiarnewbie"
        target="_blank"
        class="size-12 p-2 group"
    >
        <GithubIcon
            size={32}
            class="fill-white/50 group-hover:fill-indigo-300"
        />
    </a>
    <a
        class="size-12 p-2 group"
        href="https://discord.gg/xTkkpX9ZnG"
        target="_blank"
    >
        <DiscordIcon
            size={32}
            class="fill-white/50 group-hover:fill-indigo-300"
        />
    </a>
</footer>
